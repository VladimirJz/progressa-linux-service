################
# Unit Section #
################

[Unit]

Description=Progressa Monitor service

# Send an email if the service ever fails
#OnFailure=status-email@%n.service

###################
# Service Section #
###################

[Service]

# User to run the service as
#User=tal

# Group to run the service as
#Group=tal

# Type of service
Type=simple

# Main task
ExecStart=/opt/progressa/.env/bin/python3 /opt/progressa/service.py

# Required to see Python output in logs
Environment="PYTHONUNBUFFERED=x"

# Uncomment this to see debug messages
#Environment="DEBUG=true"

# If the script ever dies, restart it
Restart=always
RestartSec=30

###################
# Install Section #
###################

[Install]
WantedBy=multi-user.target
